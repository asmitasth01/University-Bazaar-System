<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="70dp"
    tools:context="example.com.bazaar.Buy_item_details">

    <Button
        android:text="BUY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="shippingInfo"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:orientation="vertical" >

    </LinearLayout>

    <ImageView
        android:src="@drawable/dollar_icon"
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/profile_pic"
        android:layout_height="200dp"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="229dp" />

    <TableLayout
        android:layout_width="398dp"
        android:layout_height="287dp"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Name:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                tools:text="Name:"
                android:fontFamily="serif" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_nameTextView"
                android:fontFamily="serif" />

        </TableRow>

        <TableRow
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Price:"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_priceTextView"
                android:fontFamily="serif" />

        </TableRow>

        <TableRow
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Description:"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="serif" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy_desTextView"
                android:fontFamily="serif" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
