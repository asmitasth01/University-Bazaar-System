<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trade_type_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="70dp"
    tools:context=".TradeTypeSelectionActivity"
    android:background="@color/colorPrimaryDark">

    <Button
        android:text="Exchange"
        android:id="@+id/exchange_button"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:onClick="selectTrade"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/buy_button"
        android:layout_alignStart="@+id/sell_button" />


    <Button
        android:text="Sell"
        android:id="@+id/sell_button"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="17dp"
        android:layout_width="100dp"
        android:onClick="selectTrade"
        android:textSize="14sp"
        android:layout_height="100dp"
        android:layout_above="@+id/exchange_button"
        android:layout_alignEnd="@+id/textView27" />
    <Button
        android:text="Buy"
        android:id="@+id/buy_button"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="30dp"
        android:onClick="selectTrade"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/textView27"
        android:layout_toStartOf="@+id/sell_button" />


    <Button
        android:text="Borrow"
        android:id="@+id/borrow_button"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="1dp"
        android:onClick="selectTrade"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_alignTop="@+id/exchange_button"
        android:layout_alignStart="@+id/buy_button" />

    <Button
        android:text="Exchange_Offer"
        android:id="@+id/myexchange_button"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="goExSellSide"
        android:layout_marginTop="18dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/borrow_button"
        android:layout_alignStart="@+id/textView27" />

    <TextView
        android:text="Please select Trade Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/textView27"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
