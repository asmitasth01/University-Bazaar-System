<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trade_type_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TradeTypeSelectionActivity"
    android:background="@color/colorPrimaryDark">

    <Button
        android:text="Sell"
        android:layout_height="150dp"
        android:id="@+id/sell_button"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignBottom="@+id/buy_button"
        android:layout_toRightOf="@+id/buy_button"
        android:layout_toEndOf="@+id/buy_button"
        android:layout_alignTop="@+id/buy_button"
        android:layout_width="150dp"
        android:onClick="selectTrade"/>

    <Button
        android:text="Borrow"
        android:layout_height="150dp"
        android:id="@+id/borrow_button"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/exchange_button"
        android:layout_alignLeft="@+id/buy_button"
        android:layout_alignStart="@+id/buy_button"
        android:layout_alignTop="@+id/exchange_button"
        android:layout_width="150dp"
        android:onClick="selectTrade"/>

    <Button
        android:text="Exchange"
        android:layout_height="150dp"
        android:id="@+id/exchange_button"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/sell_button"
        android:layout_alignLeft="@+id/sell_button"
        android:layout_alignStart="@+id/sell_button"
        android:layout_width="150dp"
        android:onClick="selectTrade"/>

    <TextView
        android:text="Please select Trade Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/textView27"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Buy"
        android:layout_height="150dp"
        android:id="@+id/buy_button"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="60dp"
        android:layout_width="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectTrade"/>
</RelativeLayout>
