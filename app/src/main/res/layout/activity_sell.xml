<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".sellActivity"
    android:background="@color/colorPrimaryDark">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TradeType"
        android:entries="@array/sellType"
        android:background="@color/colorAccent"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/itemPrice"
        android:layout_alignStart="@+id/itemPrice"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:popupBackground="@color/colorPrimary" />

    <TextView
        android:text="Item Quantity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="Item Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Item Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/itemDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectSellItemFromGallery"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"

        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:text="Upload Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/SelectSellItemFromCamera"
        android:layout_alignBottom="@+id/SelectSellItemFromCamera"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:text="Select Trade Option:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:fontFamily="serif"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/itemPrice"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectSellItemFromCamera"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"

        android:layout_marginTop="32dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/TradeType"
        android:layout_toEndOf="@+id/SelectSellItemFromGallery" />


    <Button
        android:text="Proceed to Bank Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/SellButton"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:onClick="UploadSellItems" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/itemPrice"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/itemQuantity"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/textView10" />

    <ImageView
        android:layout_width="300dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/SellItemImage"
        android:layout_above="@+id/SellButton"
        android:layout_centerHorizontal="true"
        android:layout_height="230dp"
        android:rotation="90"/>

</RelativeLayout>
